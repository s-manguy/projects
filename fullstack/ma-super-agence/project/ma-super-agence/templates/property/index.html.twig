{% extends 'base.html.twig' %}

{% block title 'Tous nos biens' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
                <div class="form-row align-items-end jsutify-content-center">
                    <div class="form-group col-md-6 col-lg-4">
                        {{ form_row(form.minSurface)}}
                    </div>
                    <div class="form-group col-md-6 col-lg-4">
                        {{ form_row(form.maxPrice)}}
                    </div>
                    <div class="form-group col col-md-6 col-lg-2">
                        <span class="sr-only">Select zero, one or more options</span>
                        {{ form_row(form.options)}}
                    </div>
                    <div class="form-group col offset-md-4 col-md-2 offset-lg-0 col-lg-2">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Rechercher</button>
                        </div>
                    </div>
                </div>   
            {{ form_end(form) }}
        </div>
    </div>


    <div class="container mt-4">

        <h1 class="display-4 text-center">Voir tous nos biens</h1>

        <div class="row mt-5">
            {% for property in properties %}
                <div class="col-md-6 col-lg-4">
                    {% include 'property/_property.html.twig' %}
                </div> 
            {% endfor %}
        </div>

        <div class="pagination justify-content-center mt-3 big-margin">
            {{ knp_pagination_render(properties) }}
        </div>
    
    </div>

{% endblock %}