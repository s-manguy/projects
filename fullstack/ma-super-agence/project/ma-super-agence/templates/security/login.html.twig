{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}
	<div class="container">

		{% if error %}
			<div class="alert alert-danger mt-4">
				{{ error.messageKey|trans(error.messageData, 'security') }}
			</div>
		{% endif %}

		<div class="row justify-content-center">
			<form action="{{ path('login') }}" method="post" class="mt-4">
				<div class="form-group mt-2">
					<label for="username">Nom d'utilisateur :
					</label>
					<input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
				</div>
				<div class="form-group mt-2">
					<label for="password">Mot de passe :
					</label>
					<input type="password" id="password" name="_password" class="form-control">
				</div>
				<button type="submit" class="btn btn-primary mt-4 btn-block">Se connecter</button>
			</form>
		</div>

	</div>

{% endblock %}
