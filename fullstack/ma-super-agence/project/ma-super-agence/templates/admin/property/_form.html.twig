{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="form-group col-md-4">{{ form_row(form.title)}}</div>
        <div class="form-group col-md-4">{{ form_row(form.surface)}}</div>
        <div class="form-group col-md-4">{{ form_row(form.price)}}</div>
    </div>
    <div class="row">
        <div class="form-group col-6 col-md-2">{{ form_row(form.rooms)}}</div>
        <div class="form-group col-6 col-md-2">{{ form_row(form.bedrooms)}}</div>
        <div class="form-group col-6 col-md-4">{{ form_row(form.heat)}}</div>
        <div class="form-group col-6 col-md-2">{{ form_row(form.floor)}}</div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">{{ form_row(form.imageFile)}}</div>
    </div>
    <div class="row">
        <div class="form-group col-md-5">{{ form_row(form.address)}}</div>
        <div class="form-group col-md-3">{{ form_row(form.city)}}</div>
        <div class="form-group col-md-3">{{ form_row(form.postal_code)}}</div>
        <div class="col-md-1">{{ form_row(form.sold)}}</div>
    </div>
    <div class="row"> 
        <div class="form-group col-12 col-lg-6">{{ form_row(form.description)}}</div>
        <div class="form-group col col-lg-6">{{ form_row(form.options)}}</div>
    </div>
    {{ form_rest(form) }}
    <button class="btn btn-primary">{{ button | default('Enregister') }}</button>
{{ form_end(form) }}